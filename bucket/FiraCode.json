    "checkver": "github",
    "depends": "scoop-nerd-fonts-helper",
    "autoupdate": {
        "url": "https://github.com/tonsky/FiraCode/releases/download/$version/Fira_Code_v$version.zip"
    },
    "installer": {
        "script": [
            "try {",
            "    scoop-nerd-fonts-helper install $global $app $dir '*.ttf' $true TrueType",
            "} catch { error $_; exit 1; }"
        ]
    },
    "uninstaller": {
        "script": [
            "try {",
            "    scoop-nerd-fonts-helper uninstall $global $app $dir '*.ttf' $true TrueType",
            "} catch { error $_; exit 1; }",
            "Write-Host \"The 'Fira Code' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
        ]
    }
}
