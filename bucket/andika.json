    "installer": {
        "script": [
            "Move-Item $dir\\Andika-$version\\* $dir",
            "Remove-Item $dir\\Andika-$version",
            "try {",
            "    scoop-nerd-fonts-helper -Command install",
            "} catch {",
            "    abort($_, 1)",
            "}"
        ]
    },
