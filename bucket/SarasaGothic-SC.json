{
    "##": "Renaming .7z to .7z_ so that the archive will not be automatically extracted by Scoop.",
    "version": "0.35.2",
    "homepage": "https://github.com/be5invis/Sarasa-Gothic",
    "license": "OFL-1.1",
    "depends": "scoop-nerd-fonts-helper",
    "url": "https://github.com/be5invis/Sarasa-Gothic/releases/download/v0.35.2/sarasa-gothic-ttf-0.35.2.7z#/dl.7z_",
    "hash": "f88c827d9edbb452680a35ca4847beb1f0efc7370c028a433949165d9bba9d03",
    "installer": {
        "script": [
            "Invoke-ExternalCommand 7z -ArgumentList('e', \"$dir\\dl.7z_\" ,\"-o$dir\", '*-sc-*.ttf') | Out-Null",
            "Remove-Item \"$dir\\dl.7z_\"",
            "try {",
            "    scoop-nerd-fonts-helper -Command install",
            "} catch {",
            "    abort($_, 1)",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "try {",
            "    scoop-nerd-fonts-helper -Command uninstall -FontName 'Sarasa-Gothic'",
            "} catch {",
            "    abort($_, 1)",
            "}"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/be5invis/Sarasa-Gothic/releases/download/v$version/sarasa-gothic-ttf-$version.7z#/dl.7z_"
    }
}
